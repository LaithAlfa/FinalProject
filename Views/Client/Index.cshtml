@model IEnumerable<FinalProject.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<section id="team" class="pb-5">
    <div class="container">
        <h5 class="section-title h1"><a asp-action="Create" class="text-center">Create New</a></h5> 

  <div class="row">
@foreach (var item in Model) {

   <div class="col-md-4">
                <div class="card-box">
                    <div class="card-title">
                        <h2>@Html.DisplayFor(modelItem => item.CompanyName)</h2>
                        <p>@Html.DisplayFor(modelItem => item.FirstName)</p>
                        <p>@Html.DisplayFor(modelItem => item.LastName)</p>
                         <p>@Html.DisplayFor(modelItem => item.Email)</p>
                         <p>@Html.DisplayFor(modelItem => item.Phone)</p>
                    </div>
                    <div class="card-link">
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                         <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        
                    </div>
                </div>
            </div>
  
                       

}
  </div>
</div>
</section>

